<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uni3000.uni3000">

    <application
        android:name=".Uni3000App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name=".view.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.map.university.UniversityActivity"
            android:label="@string/title_activity_university" />
        <activity android:name=".view.library.LibraryActivity" />
        <activity android:name=".view.bar.BarActivity" />
        <activity android:name=".view.build.BuildActivity" />
        <activity android:name=".view.map.university.recruit.RecruitActivity" />
        <activity android:name=".view.map.MapActivity" />
        <activity android:name=".view.map.location.LocationActivity"></activity>
    </application>

</manifest>